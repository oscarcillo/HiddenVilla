@using Model;

<div class="bg-light border p-2 col-5 m-4" @onclick="RoomCheckBoxSelectionChanged">
    <h4 class="text-secondary">Amenities - @Amenity.Id</h4> <br>
    @Amenity.Name <br>
    @Amenity.Description <br> @FirstFragment @SecondFragment
</div>

@code {

    [Parameter]
    public BlazorAmenity Amenity { get; set; }
    
    [Parameter]
    public EventCallback<BlazorAmenity> OnAmenitySelection {get; set;}

    [Parameter]
    public RenderFragment FirstFragment {get; set;}

    [Parameter]
    public RenderFragment SecondFragment {get; set;}
    
    protected async Task RoomCheckBoxSelectionChanged()
    {
        await OnAmenitySelection.InvokeAsync(Amenity);
    }

}